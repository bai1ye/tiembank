{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "启动本地节点",
          "type": "shell",
          "command": "npx hardhat node",
          "isBackground": true,
          "problemMatcher": {
              "pattern": {
                  "regexp": "."
              },
              "background": {
                  "activeOnStart": true,
                  "beginsPattern": ".",
                  "endsPattern": "Started HTTP and WebSocket JSON-RPC server at"
              }
          }
      },
      {
          "label": "部署合约",
          "type": "shell",
          "command": "npx hardhat run scripts/deploy.js --network localhost",
          "dependsOn": "启动本地节点",
          "problemMatcher": []
      },
      {
          "label": "运行事件监听",
          "type": "shell",
          "command": "node scripts/events.js",
          "dependsOn": "部署合约",
          "problemMatcher": [],
          "group": {
              "kind": "build",
              "isDefault": true
          }
      },
      {
          "label": "执行完整流程",
          "dependsOrder": "sequence",
          "dependsOn": [
              "启动本地节点",
              "部署合约",
              "运行事件监听"
          ],
          "problemMatcher": []
      }
  ]
}




  